<h1>
	<small>Order for</small> <%= @food_item.name %>
</h1>

<!--
The same as form_for food_item_orders_path(@food_item) do |f|
-->
<div class="row">
	<div class="col-sm-4">
		<%= form_for [@food_item,Order.new] do |f| %>

		<fieldset class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name,class: 'form-control' %>
		</fieldset>

		<fieldset class="form-group">
			<%= f.label :phome %>
			<%= f.text_field :phone,class: 'form-control' %>
		</fieldset>

		<fieldset class="form-group">
			<%= f.label :address %>
			<%= f.text_field :address,class: 'form-control' %>
		</fieldset>
		
		<fieldset class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email,class: 'form-control' %>
		</fieldset>

		<fieldset class="form-group">
			<%= f.label :quantity %>
			<%= f.text_field :quantity,class: 'form-control' %>
		</fieldset>

		<fieldset class="form-group">
			<%= f.label :coupon_code %>
			<%= f.text_field :coupon_code,class: 'form-control' %>
		</fieldset>

		<%= f.submit "Submit Order",class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>