<div class="nav-top-div">
	<div class="row">
		<div class="col-sm-6 to-the-right">
			<%= link_to root_path do  %>
			<%= image_tag asset_path "logo.png",alt: "logog", class: "nav-logoo" %> <span class="harry-text">Harry Restaurant</span>	
			<% end %>
		</div>
		<div class="col-sm-6">
			<nav class="navbar navbar-light" style="background-color: #ffffff;">
