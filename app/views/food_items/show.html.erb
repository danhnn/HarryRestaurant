
<div class="card">
  <%= image_tag @food_item.image_url_or_default, alt: @food_item.name,class: "card-img-top"  %>
  <div class="card-block">
    <h4 class="card-title"> <%= @food_item.name %></h4>
    <h3 class="card-title"> Price: <%= @food_item.price %></h3>
    <h5 class="card-title"> Views: <%= @food_item.views %></h5>
    <p class="card-text"><%= @food_item.description %></p>
    <%= link_to 'Order', new_food_item_order_path(@food_item), class:"btn btn-danger" %>
  </div>
</div>

