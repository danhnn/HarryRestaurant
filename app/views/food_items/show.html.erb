
<div class="card">
  <%= image_tag @food_item.image_url_or_default, alt: @food_item.name,class: "card-img-top"  %>
  <div class="card-block">
    <h4 class="card-title"> <%= @food_item.name %></h4>
    <h3 class="card-title"> Price: <%= @food_item.price %></h3>
    <h5 class="card-title"> Views: <%= @food_item.views %></h5>
    <div>
      <span>Rating: <%=  @food_item.show_rating %>   <%= image_tag asset_path "star-on.png" %></span>
    </div>
    <p class="card-text"><%= @food_item.description %></p>
    <%= link_to 'Order', new_food_item_order_path(@food_item), class:"btn btn-danger" %>
  </div>
</div>

<div class="row comment-show">
  <% @comments.each do |comment| %>

  <div class="card">
    <div class="card-block">
      <!-- Render Start here-->
      <div> 
        <% if comment.rating.present? %>
          <% comment.rating.times do %>
            <%= image_tag asset_path "star-on.png" %>
          <% end %>
        <% end %>
      </div>
      <h3 class="card-title"> <%= comment.title %></h3>
      <p class="card-text"><%= comment.body %></p>
    </div>
  </div>

  <% end %>
</div>

<div class="row comment-form">
  <%= form_for [@food_item,Comment.new] do |f| %>
  <fieldset class="form-group">
    <span>Rating:</span> 
    <%= f.select :rating, [5,4,3,2,1]%>
    <%= image_tag asset_path "star-on.png" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body,class: 'form-control' %>
  </fieldset>

  <%= f.submit "Send",class: 'btn btn-primary' %>
  <% end %>
</div>

