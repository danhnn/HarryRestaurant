<h1>Nha Hang Menu</h1>

<div class="row">
	<div class="col-sm-6">
		<div class="btn-group" role="group" aria-label="Basic example">
			<% @sections.each do |section| %>
			<%= link_to section.name, menu_path(section_id: section.id), class: 'btn btn-secondary' %>
			<% end %>
		</div>

	</div>
	<div class="col-sm-6">
		<div class="dropdown">
			<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Alphabetical
			</button>
			<div class="dropdown-menu" aria-labelledby="dropdownMenu1">
				<%= link_to 'Alphabetical', menu_path({ section_id: @section.id, order: 'name'}), class: "dropdown-item" %>
				<%= link_to 'Price low to high', menu_path({ section_id: @section.id, order: 'price'}), class: "dropdown-item" %>
				<%= link_to 'Price high to low', menu_path({ section_id: @section.id, order: 'price DESC'}), class: "dropdown-item" %>
			</div>
		</div>
	</div>
</div>

<% @food_items.in_groups_of(3) do |group| %>
<div class="row">
	<% group.compact.each do |food_item| %>
	<div class="col-sm-4">
		<div class="card">
			<%= image_tag food_item.image_url_or_default, alt: food_item.name,class: "card-img-top"  %>
			<div class="card-block">
				<%= link_to food_item do %>
					<h4 class="card-title">
						<%= food_item.name %>
						<span class="label label-default"><%= food_item.orders.size %></span>
					</h4>
				<% end %>
				<p>Rating: <%=  food_item.show_rating %>   <%= image_tag asset_path "star-on.png" %></p>
				<p class="card-text">Price: <%= food_item.price %> VND</p>
				<p class="card-text">Views: <%= food_item.views %></p>
				<p class="card-text"><%= food_item.description %></p>
			</div>
			<div class="card-block">
				<%= link_to 'Order', new_food_item_order_path(food_item), class:"card-link btn btn-danger" %>
			</div>
		</div>
	</div>
	<% end %>	
</div>
<% end %>

<%= paginate @food_items %>
